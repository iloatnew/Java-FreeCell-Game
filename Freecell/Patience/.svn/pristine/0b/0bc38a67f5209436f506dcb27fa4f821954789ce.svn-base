package model;

import java.awt.image.BufferedImage;
import java.io.InputStream;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;

import javafx.scene.image.Image;
import javafx.scene.paint.Color;

public class Karte {
	private Image backImage;
	private Image faceImage;
	private Wert wert;
	private Sort sort;
	private Color farbe;
	
	
	public Karte(Wert wert, Sort sort){
		this.setWert(wert);
		this.setSort(sort);
		this.setFarbe(sort.farbe());
		setBackImage(new Image("cover.gif"));
		setFaceImage(new Image(sort.name()+Integer.valueOf(wert.value).toString()+".gif"));
	}

	/**
	 * unterschiedliche Farbe und Nachbarn Wert
	 * @param karte
	 * @return
	 */
	public boolean inStrasseAbsteigend(Karte karte){
		if(this.getFarbe()!=karte.getFarbe()){
			if(this.getWert().ordinal() == karte.getWert().ordinal()+1){
				return true;
			}
			else{
				return false;
			}
		}
		else{
			return false;
		}
	}
	
	
	public Image getFaceImage() {
		return faceImage;
	}


	public void setFaceImage(Image faceImage) {
		this.faceImage = faceImage;
	}


	public Image getBackImage() {
		return backImage;
	}


	public void setBackImage(Image backImage) {
		this.backImage = backImage;
	}


	public Wert getWert() {
		return wert;
	}


	public void setWert(Wert wert) {
		this.wert = wert;
	}


	public Sort getSort() {
		return sort;
	}


	public void setSort(Sort sort) {
		this.sort = sort;
	}


	public Color getFarbe() {
		return farbe;
	}


	public void setFarbe(Color farbe) {
		this.farbe = farbe;
	}
	
	
}
